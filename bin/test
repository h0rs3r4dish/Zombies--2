#!/usr/bin/ruby

testname = ARGV.first or 'all'

def test(text,&block)
	print text + '...'
	block.call
	puts "OK"
end

if testname == 'all' then
	files = Dir['test/*']
	files.each { |file|
		puts "---- Running %s" % file
		load file		
		print "\n\n" unless file == files.last
	}
else
	load "test/%s.rb" % testname
end
